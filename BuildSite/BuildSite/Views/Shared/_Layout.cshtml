<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   

    <div id="head-top">
        <h1> DIABLO BUILDER </h1>
    </div>

    
    <div id="head-navbar">
        <div id="navbar">
            <ul>
                <li>@Html.ActionLink("Home", "Frontpage", "Home", null, new { @class = "tab", hidefocus = "hidefocus" })</li>
                <li>@Html.ActionLink("Instructions", "Instructions", "Home", null, new { @class = "tab" })</li>
                <li>@Html.ActionLink("About us", "About", "Home", null, new { @class = "tab" })</li>
            </ul>
        </div>
    </div>







  
    <div id="container" class="container body-content">
        @RenderBody()
    </div>


    <footer></footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
